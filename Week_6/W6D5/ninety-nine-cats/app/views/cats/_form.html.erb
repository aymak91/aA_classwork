<% if type == :new %>
    <% action_url = cats_url %>
    <% button_text = "Create Cat!" %>
<% else %>
    <% action_url = cat_url(cat) %>
    <% button_text = "Edit Cat!" %>
<% end %>

<form action="<%= action_url %>" method="POST">
    <% if type == :edit %>
        <input type="hidden" name="_method" value="patch" >
    <% end %>

    <label for="name">Name</label>
    <input type="text" id="name" name="cat[name]" value="<%= cat.name %>">
    <br>

    <label for="birth_date">Birth Date</label>
    <input type="date" id="birth_date" name="cat[birth_date]" value="<%= cat.birth_date %>">

    <br>
    
    <label for="color">Color</label>
        <select id="color", name="cat[color]">
            <option disabled selected>>-- Please Select --<</option>
            <option value="Tabby">Tabby</option>
            <option value="Black">Black</option>
            <option value="Ginger">Ginger</option>
            <option value="Orange">Orange</option>            
            <option value="White">White</option>
        </select>

    <br>

    <input type="radio" id="male" name="cat[sex]" value="M">
    <label for="male">Male</label><br>
    <input type="radio" id="female" name="cat[sex]" value="F">
    <label for="female">Female</label>
    <br>

    <label for="description">Description</label>
    <input type="text" id="name" name="cat[description]" value="<%= cat.description %>">
    <br>
    <input type="submit" value="<%= button_text %>">
</form>